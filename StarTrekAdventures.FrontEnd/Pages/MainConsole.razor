@page "/main"
@inject NavigationManager NavManager

<PageTitle>Starfleet Operations</PageTitle>

<div class="min-h-screen bg-gray-900 flex flex-col items-center justify-center p-6 font-sans">
    <h1 class="text-5xl font-extrabold text-blue-400 mb-12 tracking-wide"
        style="text-shadow: 0 0 20px rgba(60, 150, 255, 0.8);">
        Starfleet Command
    </h1>

    <p class="text-lg text-gray-300 mb-10 text-center">
        Select an operation to proceed.
    </p>

    <div class="flex flex-col items-stretch space-y-6 w-full max-w-md mx-auto">

        <!-- ⭐ Generate Character -->
        <button @onclick="GoToGenerate"
                class="p-6 rounded-xl border border-blue-500 bg-gray-800/40 text-left
                       transition-all duration-300 ease-in-out hover:scale-[1.02]
                       hover:bg-blue-700/30 hover:border-blue-400 hover:shadow-[0_0_25px_rgba(0,200,255,0.6)]
                       focus:outline-none focus:ring-2 focus:ring-blue-400">
            <h2 class="text-2xl font-bold text-blue-300 mb-2 flex items-center">
                <span class="mr-3 text-3xl animate-pulse">⭐</span> Generate Character
            </h2>
            <p class="text-gray-200">Create a new random Starfleet officer.</p>
        </button>

        <!-- 🗓️ Mission Log -->
        <button disabled
                class="p-6 rounded-xl border border-indigo-700 bg-indigo-800/30 text-left opacity-60 cursor-not-allowed">
            <h2 class="text-2xl font-bold text-indigo-300 mb-2">Character Builder</h2>
            <p class="text-gray-300">Coming soon - Build a character</p>
        </button>

        <!-- 🧑‍🚀 Ship Roster -->
        <button disabled
                class="p-6 rounded-xl border border-yellow-700 bg-yellow-800/30 text-left opacity-60 cursor-not-allowed">
            <h2 class="text-2xl font-bold text-yellow-300 mb-2">Ship Roster</h2>
            <p class="text-gray-300">Coming soon.</p>
        </button>

        <!-- 🛡️ Tactical Status -->
        <button disabled
                class="p-6 rounded-xl border border-red-700 bg-red-800/30 text-left opacity-60 cursor-not-allowed">
            <h2 class="text-2xl font-bold text-red-300 mb-2">Tactical Status</h2>
            <p class="text-gray-300">Coming soon.</p>
        </button>
    </div>
</div>

@code {
    private void GoToGenerate() => NavManager.NavigateTo("/generate-character");
}
