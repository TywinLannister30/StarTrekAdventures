@page "/"
@namespace StarTrekAdventures.FrontEnd.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Star Trek Adventures</title>
    <base href="~/" />

    <!-- ✅ Tailwind CSS for modern styling -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Optional: keep component-specific styles -->
    <link href="StarTrekAdventures.FrontEnd.styles.css" rel="stylesheet" />
</head>
<body class="bg-gray-900 text-white min-h-screen">
    <div id="app">
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </div>

    <div id="blazor-error-ui" class="hidden">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred.
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </environment>
    </div>

    <script src="_framework/blazor.server.js"></script>
</body>
</html>
